@page
@model SalesTracker_RJLOZANSKI.Pages_Deals.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create New Deal</h1>
        
    <h4>Please enter the details for the new deal below</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Deal.CustomerName" class="control-label"></label>
                <input asp-for="Deal.CustomerName" class="form-control" />
                <span asp-validation-for="Deal.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deal.ProductType" class="control-label"></label>
                <input asp-for="Deal.ProductType" class="form-control" />
                <span asp-validation-for="Deal.ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deal.DealValue" class="control-label"></label>
                <input asp-for="Deal.DealValue" class="form-control" />
                <span asp-validation-for="Deal.DealValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deal.Status" class="control-label"></label>
                <input asp-for="Deal.Status" class="form-control" />
                <span asp-validation-for="Deal.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deal.CloseDate" class="control-label"></label>
                <input asp-for="Deal.CloseDate" class="form-control" />
                <span asp-validation-for="Deal.CloseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deal.SalesRepID" class="control-label"></label>
                <select asp-for="Deal.SalesRepID" class="form-control" asp-items="ViewBag.SalesRepID"></select>
                <span asp-validation-for="Deal.SalesRepID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
